<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:achuan="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:orientation="vertical" >
    <com.example.achuan.studentmanagersystem.Uitl.MyTopbar
        android:layout_alignParentTop="true"
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        achuan:MyleftText="返回"
        achuan:MyleftTextColor="#ffffff"
        achuan:MyleftBackgroud="@drawable/bt_bg"
        achuan:MyrightText="更多"
        achuan:MyrightTextColor="#ffffff"
        achuan:MyrightBackgroud="@drawable/bt_bg"
        achuan:MytitleTextColor="#ffffff"
        achuan:MytitleTextSize="9sp"
        achuan:MytitleText="欢迎注册"
        android:background="#1E90FF">
    </com.example.achuan.studentmanagersystem.Uitl.MyTopbar>
    <!--账号输入和密码输入框-->
    <RelativeLayout
        android:id="@+id/id_rtl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topbar"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/id_rtl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/edit_text_bg">
            <EditText
                android:id="@+id/id_et_registerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:hint="教工号"
                android:textColorHint="#aaaaaa"
                android:inputType="phone"
                android:textCursorDrawable="@drawable/color_cursor"
                android:background="@null"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_rtl_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/id_rtl_2"
            android:background="@drawable/edit_text_bg">
            <EditText
                android:id="@+id/id_et_firstPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:hint="登录密码"
                android:textColorHint="#aaaaaa"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/color_cursor"
                android:background="@null"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_rtl_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/id_rtl_3"
            android:background="@drawable/edit_text_bg">
            <EditText
                android:id="@+id/id_et_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:hint="确认密码"
                android:textColorHint="#aaaaaa"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/color_cursor"
                android:background="@null"/>
        </RelativeLayout>
    </RelativeLayout>
    <!--登陆按钮-->
    <Button
        android:id="@+id/id_bt_register"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_below="@id/id_rtl_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_bt_bg"
        android:textColor="#ffffff"
        android:text="下一步"
        android:textSize="16dp"/>
    <LinearLayout
        android:id="@+id/id_ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/id_bt_register">
        <!--同意复选框-->
        <CheckBox
            android:id="@+id/id_cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            style="@style/CustomCheckboxTheme"
            android:checked="true"/>
        <TextView
            android:id="@+id/id_tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="我已阅读并同意"/>
        <!--忘记密码入口-->
        <TextView
            android:id="@+id/id_tv_forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1874CD"
            android:text="使用条款和隐私政策"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>